@{
    ViewData["Title"] = "Peliculas";
    Layout = "_Layout";
}
<button class="btn btn-primary" onclick="nuevaPelicula()">Nueva pelicula</button>
<br>
<div class="row">
    <table width="100%" 
            class="table" 
            id="grid_peliculas" 
            style="table-layout: fixed; word-break: break-word !important;">
        <thead class="thead-default">
            <tr>
                <th>Nombre</th>
                <th>Descripción</th>
                <th>Imagen</th>
                <th>Duración</th>
                <th>Año</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
        </tbody>
    </table>
</div>

<script>
    $(document).ready(function () {
        var columns = [{
            "data": "nombrePelicula",
            "name": "nombrePelicula",
            "searchable": true,
            "visible": true,
            "orderable": true,
            defaultContent: ""
        }, {
            "data": "descripcionPelicula",
            "name": "descripcionPelicula",
            "searchable": true,
            "visible": true,
            "orderable": true,
            defaultContent: ""
        }, {
            "data": "imagenPelicula",
            "name": "imagenPelicula",
            "searchable": true,
            "visible": true,
            "orderable": true,
            defaultContent: ""
        },{
            "data": "duracionPelicula",
            "name": "duracionPelicula",
            "searchable": true,
            "visible": true,
            "orderable": true,
            defaultContent: ""
        },{
            "data": "añoPelicula",
            "name": "añoPelicula",
            "searchable": true,
            "visible": true,
            "orderable": true,
            defaultContent: ""
        },{
            data: function (row, type, set) {
                var s = '';
                s += 
                    `<button 
                        title='Editar' 
                        type='button' 
                        class='btn btn-sm btn-primary' 
                        onclick='editarPelicula()'
                        style=''> 
                            <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                    </button>`;
                
                s += 
                    `<button 
                        title='Ver' 
                        type='button' 
                        class='btn btn-sm btn-primary' 
                        onclick='verPelicula()'
                        style='margin-left:2px;'>  
                            <span class="glyphicon glyphicon-eye-open" aria-hidden="true"></span>
                    </button>`;
                
                s += 
                    `<button 
                        title='Eliminar' 
                        type='button' 
                        class='btn btn-sm btn-primary' 
                        onclick='eliminarPelicula()'
                        style='margin-left:2px;'>
                            <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
                    </button>`;
                
                return s;
            },
            "searchable": false,
            "orderable": false,
            "visible": true,
            defaultContent: ""
        }];
        
        createGrid(
            'grid_peliculas', 
            'Pelicula/Listar', 
            'peliculas', 
            columns, 
            null, 
            true);
    });

    function nuevaPelicula()
    {
        window.location= urlContent + "Pelicula/Nuevo";
    }
</script>