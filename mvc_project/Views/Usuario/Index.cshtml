@{
    ViewData["Title"] = "Usuarios";
    Layout = "_Layout";
}
<button class= "btn btn-primary" onclick="nuevoUsuario">Nuevo usuario</button>
<br>
<br>
<br>
<div class="row">
    <table width="100%" 
            class="table" 
            id="example" 
            style="table-layout: fixed; word-break: break-word !important;">
        <thead class="thead-default">
            <tr>
                <th>Nombre</th>
                <th>Apellido</th>
                <th>Nombre de usuario</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
        </tbody>
    </table>
</div>

<script>
    $(document).ready(function () {
        var columns = [{
            "data": "nombrePersona",
            "name": "nombrePersona",
            "searchable": true,
            "visible": true,
            "orderable": true,
            defaultContent: ""
        }, {
            "data": "apellidoPersona",
            "name": "apellidoPersona",
            "searchable": true,
            "visible": true,
            "orderable": true,
            defaultContent: ""
        }, {
            "data": "nombreUsuario",
            "name": "nombreUsuario",
            "searchable": true,
            "visible": true,
            "orderable": true,
            defaultContent: ""
        }, {
            data: function (row, type, set) {
                var s = '';
                s += 
                    `<button 
                        title='Editar' 
                        type='button' 
                        class='btn btn-sm btn-primary' 
                        onclick='editarUsuario()'
                        style=''> 
                            <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                    </button>`;
                
                s += 
                    `<button 
                        title='Ver' 
                        type='button' 
                        class='btn btn-sm btn-primary' 
                        onclick='verUsuario'
                        style='margin-left:2px;'>  
                            <span class="glyphicon glyphicon-eye-open" aria-hidden="true"></span>
                    </button>`;
                
                s += 
                    `<button 
                        title='Eliminar' 
                        type='button' 
                        class='btn btn-sm btn-primary' 
                        onclick='eliminarUsuario'
                        style='margin-left:2px;'>  
                            <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
                    </button>`;

                s +=   
                    `<button 
                        type='button' 
                        class='btn btn-sm btn-secondary' 
                        style='margin-left:2px;background-color:green;'>
                            <svg class="c-icon glyphicon" style='width:12px;height:12px;'>
                                <use xlink: 
                                    href="${urlContent}img/icons/svg/free.svg#cil-pencil">
                                </use>
                            </svg>
                    </button>`;

                return s;
            },
            "searchable": false,
            "orderable": false,
            "visible": true,
            defaultContent: ""
        }];
        
        createGrid(
            'grid_usuarios', 
            'Usuario/ListarUsuarios', 
            'usuarios', 
            columns, 
            null, 
            true);
    });
</script>
