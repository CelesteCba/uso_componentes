@model mvc_project.Models.Usuario.UsuarioViewModel

@{
    ViewData["Title"] = "Usuarios";
    Layout = "_Layout";
}
<input type="hidden" id="txt_id_usuario" value="@Model.id">

<div class="row justify-content-around">
    <div class="cd-xs-12 col-sm-12 col-md-6 col-log-6">
        <div class="row pb-3">
            <div class="col-md-12 pl-0 pr-0">
                <input class="form-control"
                id="txt_nombre_persona"
                placeholder="Nombre"
                type="text"
                value="@Model.nombrePersona"/>
            </div>
        </div>
        <div class="row pb-3">
            <div class="col-md-12 pl-0 pr-0">
                <input class="form-control"
                id="txt_apellido_persona"
                placeholder="Apellido"
                type="text"
                value="@Model.apellidoPersona"/>
            </div>
        </div>
                <div class="row pb-3">
            <div class="col-md-12 pl-0 pr-0">
                <input class="form-control"
                id="txt_nombre_usuario"
                placeholder="Nombre de usuario"
                type="text"
                value="@Model.nombreUsuario"/>
            </div>
        </div>
        <div class="row pb-3">
            <div class="col-md-12 pl-0 pr-0">
                <input class="form-control"
                id="txt_password"
                placeholder="Contraseña"
                type="password"
                value=""/>
            </div>
        </div>
        <div class="row pb-3">
            <div class="col-md-12 pl-0 pr-0">
                <input class="form-control"
                id="txt_re_password"
                placeholder="Confirme contraseña"
                type="password"
                value=""/>
            </div>
        </div>
    </div>
</div>
<div class="row justify-content-around">
    
        @if (Model.accion != mvc_project.Models.Common.CodigosAccion.Ver)
            {
                <div class="cd-xs-6">
                    <button class= "btn btn-primary" onclick="guardarUsuario()">Guardar</button>
                </div>
            }else{
                <div class="cd-xs-6">&nbsp;</div>
            }
            <div class="cd-xs-6">
                <button class= "btn btn-secondary" onclick="cancelar()">Cancelar</button>
            </div>
</div>
<script>
    function guardarUsuario()
    {
        let idUsuario = $("#txt_id_usuario").val();
        let nombrePersona = $("#txt_nombre_persona").val();
        let apellidoPersona = $("#txt_apellido_persona").val();
        let nombreUsuario = $("#txt_nombre_usuario").val();
        let password = $("#txt_password").val();
        let rePassword = $("#txt_re_password").val();

        let listadoErrores = "";

        if (nombrePersona == null || nombrePersona == "")
        {
            listadoErrores += "-El nombre de la persona es obligatorio"
        }
         if (apellidoPersona == null || apellidoPersona == "")
        {
            listadoErrores += "-El apellido de la persona es obligatorio"
        }
        if (nombreUsuario == null || nombreUsuario == "")
        {
            listadoErrores += "-El nombre de usuario es obligatorio"
        }
        if (password == null || password == "")
        {
            listadoErrores += "-La contraseña es obligatoria"
        }
        if (rePassword == null || rePassword == "")
        {
            listadoErrores += "-Debe confirmar la contraseña"
        }
        if (password != rePassword)
        {
            listadoErrores += "-Las contraseñas no coinciden"
        }
        if (listadoErrores != "")
        {
            msjError("Error",listadoErrores);
            return;

        }

        let data = {
            idUsuario:idUsuario,
            nombrePersona:nombrePersona,
            apellidoPersona:apellidoPersona,
            nombreUsuario:nombreUsuario,
            password:password
        };

         ajax(
            "post", 
            "Usuario/Guardar", 
            data, 
            "Guardando...", 
            "Espere por favor...", 
            function(response){
               msjSuccess("Exito", "El usuario se guardo correctamente", function(){
                   window.location = urlContent + "Usuario/Index";
               });
            }, null);


    }
</script>