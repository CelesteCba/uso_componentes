@model mvc_project.Models.Login.LoginViewModel
@{
    Layout = "_LayoutLogin";
}

@{
    ViewData["Title"] = "CJ CINEMA";
}

<!--Esto es un comentario-->
<div class="row" style="margin-top:15%;">
    <div class="col-sm-4">&nbsp;</div>
    <div class="col-4 text-center">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Bienvenido a @ViewData["Title"]</h5>
                <form class="row g-3" action='@Url.Content("~/Home/Login")' method="post">
                    @if (!Model.isLogged)
                    {
                        <div class="col-12">
                            <label class="form-label text-danger">@Model.message</label>
                        </div>

                    }
                    <div class="col-12">
                        <label for="user_name" class="form-label">Usuario</label>
                        <input class="form-control" type="text" value="" name="userName" id="user_name"
                            placeholder="Ingrese su nombre de usuario">
                    </div>
                    <div class="col-12">
                        <label for="password" class="form-label">Contrase&ntilde;a</label>
                        <input class="form-control" type="password" value="" name="password" id="password"
                            placeholder="Ingrese su contraseña">
                    </div>
                    <div class="col-12">
                        <button class="btn btn-primary" type="submit">Ingresar</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <div class="col-4">&nbsp;</div>
</div>