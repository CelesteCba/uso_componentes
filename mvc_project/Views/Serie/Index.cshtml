@{
    ViewData["Title"] = "Series";
    Layout = "_Layout";
}
<button class="btn btn-primary" onclick="nuevaSerie()">Nueva serie</button>
<br>
<div class="row">
    <table width="100%" 
            class="table" 
            id="grid_series" 
            style="table-layout: fixed; word-break: break-word !important;">
        <thead class="thead-default">
            <tr>
                <th>Nombre</th>
                <th>Descripcion</th>
                <th>Imagen</th>
                <th>Temporada</th>
                <th>Año</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
        </tbody>
    </table>
</div>

<script>
    $(document).ready(function () {
        var columns = [{
            "data": "nombreSerie",
            "name": "nombreSerie",
            "searchable": true,
            "visible": true,
            "orderable": true,
            defaultContent: ""
        }, {
            "data": "descripcionSerie",
            "name": "descripcionSerie",
            "searchable": true,
            "visible": true,
            "orderable": true,
            defaultContent: ""
        }, {
            "data": "imagenSerie",
            "name": "imagenSerie",
            "searchable": true,
            "visible": true,
            "orderable": true,
            defaultContent: ""
        },{
            "data": "temporadaSerie",
            "name": "temporadaSerie",
            "searchable": true,
            "visible": true,
            "orderable": true,
            defaultContent: ""
        },{
            "data": "añoSerie",
            "name": "añoSerie",
            "searchable": true,
            "visible": true,
            "orderable": true,
            defaultContent: ""
        }, {
            data: function (row, type, set) {
                var s = '';
                s += 
                    `<button 
                        title='Editar' 
                        type='button' 
                        class='btn btn-sm btn-primary' 
                        onclick='editarSerie()'
                        style=''> 
                            <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                    </button>`;
                
                s += 
                    `<button 
                        title='Ver' 
                        type='button' 
                        class='btn btn-sm btn-primary' 
                        onclick='verSerie()'
                        style='margin-left:2px;'>  
                            <span class="glyphicon glyphicon-eye-open" aria-hidden="true"></span>
                    </button>`;
                
                s += 
                    `<button 
                        title='Eliminar' 
                        type='button' 
                        class='btn btn-sm btn-primary' 
                        onclick='eliminarSerie()'
                        style='margin-left:2px;'>
                            <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
                    </button>`;
                

                return s;
            },
            "searchable": false,
            "orderable": false,
            "visible": true,
            defaultContent: ""
        }];
        
        createGrid(
            'grid_series', 
            'Serie/Listar', 
            'series', 
            columns, 
            null, 
            true);
    });
    function nuevaSerie()
    {
        window.location= urlContent + "Serie/Nuevo";
    }
</script>